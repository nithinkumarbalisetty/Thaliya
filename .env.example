# Environment Configuration Example
# Copy this to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=thaliya-healthcare-secret-key-2025-change-in-production
APP_NAME=Thaliya Healthcare API Gateway

# Azure OpenAI Configuration for LangChain RAG
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Database (when you're ready for production)
DATABASE_URL=postgresql://username:password@localhost:5432/thaliya_db

# External API Keys (for future integrations)
OPENAI_API_KEY=sk-your-openai-api-key-here
PROGNOCIS_API_URL=https://api.prognocis.com
PROGNOCIS_API_KEY=your-prognocis-api-key-here

# Vector Database (for enhanced RAG)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment

# CORS Settings
ALLOWED_HOSTS=["localhost", "127.0.0.1", "your-domain.com"]

# Security
ACCESS_TOKEN_EXPIRE_HOURS=24
ALGORITHM=HS256

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
# Environment variables
DEBUG=True
SECRET_KEY=your-secret-key-here

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Client Credentials for Services
ECARE_CLIENT_ID=ecare_client_id
ECARE_CLIENT_SECRET=ecare_client_secret

GEORGETOWN_CLIENT_ID=georgetown_client_id
GEORGETOWN_CLIENT_SECRET=georgetown_client_secret

CHRONICCAREBRIDGE_CLIENT_ID=chroniccarebridge_client_id
CHRONICCAREBRIDGE_CLIENT_SECRET=chroniccarebridge_client_secret

ANARCARE_CLIENT_ID=anarcare_client_id
ANARCARE_CLIENT_SECRET=anarcare_client_secret

# CORS
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000", "*"]

# External Service URLs (if needed)
ECARE_SERVICE_URL=https://api.ecare.com
GEORGETOWN_SERVICE_URL=https://api.georgetown.edu
CHRONICCAREBRIDGE_SERVICE_URL=https://api.chroniccarebridge.com
ANARCARE_SERVICE_URL=https://api.anarcare.com
